<%- include('partials/header') -%>
  <div class="container">
    <div class="row mt-5">
      <div class="col-6">
        <div>
          <p><strong class="user-info">User Name:</strong><br>
            <%= user.userName %>
          </p>
          <p><strong class="user-info">Email:</strong><br>
            <%= user.email %>
          </p>
          <a href="/logout" class="col-3 btn btn-primary">Logout</a>
        </div>
        <div class="mt-5">
          <h2 class="add-post">Add a post</h2>
          <form action="/post/createPost" enctype="multipart/form-data" method="POST">
            <div class="mb-3">
              <label for="title" class="form-label">Sound Category:&nbsp;</label>

              <select id="audio" name="audio">
                <option value="background" selected>background</option>
                <option value="creature sounds">Creature Sounds</option>
                <option value="ambient">Ambient</option>
                <option value="other SFX">Other SFX</option>
              </select>
            </div>
            <div class="mb-3">
              <label for="title" class="form-label">Title</label>
              <input type="text" class="form-control" id="title" name="title">
            </div>

            <div class="mb-3">
              <label for="caption" class="form-label">Caption- Brief description of the sound</label>
              <textarea class="form-control" id="caption" name="caption"></textarea>
            </div>
            <div class="mb-3">
              <label for="imgUpload" class="form-label">Select audio file to upload:</label>
              <input type="file" class="form-control" id="imageUpload" name="file">
            </div>
            <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
          </form>
        </div>
      </div>
      <div class="col-6">
        <ul class="row list-unstyled">
          <% for(var i=0; i<posts.length; i++) {%>
            <li class="col-6 justify-content-between mt-5">
              <a href="/post/<%= posts[i]._id%>">




                <h3>
                  <%= posts[i].title %>
                </h3>
                <p><strong>Category</strong>: WIP
                </p>
                <button data-playing="false" role="switch" aria-checked="false">

                  Click to View
                </button>

              </a>
            </li>
            <% } %>
        </ul>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">Return to Feed</a>
        </div>
      </div>
    </div>
  </div>


  </div>
  <%- include('partials/footer') -%>